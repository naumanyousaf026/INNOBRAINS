<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Form</title>
    <link href="/path/to/tailwind.css" rel="stylesheet" />
  </head>
  <body>
    <div
      class="flex flex-col lg:flex-row items-center justify-between p-8 lg:p-16 text-white rounded-md space-y-8 lg:space-y-0"
      style="background: linear-gradient(180deg, #082442 0%, #07396b 100%)"
    >
      <!-- Left Section -->
      <div class="lg:w-1/3 lg:pl-14 text-center lg:text-left">
        <h2 class="text-3xl lg:text-5xl font-bold mb-6 lg:mb-20">
          We Welcome Your Words!
        </h2>
        <p class="text-gray-300">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla
          condimentum vel mauris sit amet molestie.
        </p>
      </div>

      <!-- Right Section -->
      <div class="w-full lg:w-1/2 text-black p-6 rounded-lg">
        <form action="/path/to/your/submit" method="POST">
          <div class="flex flex-col lg:flex-row lg:space-x-4 mb-4">
            <!-- Name Input -->
            <div class="w-full lg:w-1/2 mb-4 lg:mb-0">
              <label class="block text-sm text-white font-bold mb-2" for="name"
                >Name</label
              >
              <input
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                type="text"
                id="name"
                name="name"
                placeholder="Input Name"
              />
            </div>

            <!-- Email Input -->
            <div class="w-full lg:w-1/2">
              <label class="block text-sm text-white font-bold mb-2" for="email"
                >Email</label
              >
              <input
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
                type="email"
                id="email"
                name="email"
                placeholder="Input Email"
              />
            </div>
          </div>

          <!-- Message Input -->
          <div class="mb-4">
            <label class="block text-sm text-white font-bold mb-2" for="message"
              >Message</label
            >
            <textarea
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600"
              id="message"
              name="message"
              rows="4"
              placeholder="Input Your Message"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-end">
            <button
              style="
                background: linear-gradient(180deg, #df821a 0%, #ffb665 100%);
              "
              class="text-white font-bold py-2 px-4 rounded-md hover:bg-orange-600 transition duration-300"
              type="submit"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
