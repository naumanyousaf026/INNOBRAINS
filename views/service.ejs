<% const services = [ { id: 1, title: "Software Development", iconColor:
"bg-[#F4952C]", items: ["Toolkits", "Guidelines", "Visual Identity", "Brand
Strategy"] }, { id: 2, title: "Website Development", iconColor: "bg-[#DAEFFE]",
items: ["Toolkits", "Guidelines", "Visual Identity", "Brand Strategy"] }, { id:
3, title: "Graphic Designing", iconColor: "bg-[#F4952C]", items: ["Toolkits",
"Guidelines", "Visual Identity", "Brand Strategy"] } ]; %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center">
    <div
      class="inline-block bg-white text-gray-800 font-semibold py-2 px-7 shadow-sm border rounded-lg mb-8"
    >
      <span class="flex items-center">
        <span
          class="inline-block w-3 h-3 bg-[#103153] rounded-full mr-3"
        ></span>
        OUR SERVICES
      </span>
    </div>

    <h1
      class="text-4xl mx-8 sm:mx-16 md:mx-32 lg:mx-44 font-bold text-gray-900 mt-2"
    >
      We Offer Professional <span class="text-[#103153]">Services</span> For
      Your Business
    </h1>
    <p class="text-gray-600 mt-4 mx-8 sm:mx-16 md:mx-32 lg:mx-44">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis molestie
      eros et purus suscipit cursus. Interdum et malesuada fames ac ante ipsum
      primis in faucibus.
    </p>
  </div>

  <div class="flex justify-center mt-32">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 justify-items-center"
    >
      <% services.forEach( async (service, index) => { %>
      <div
        class="relative bg-white p-6 rounded-lg shadow-xl border-y flex flex-col items-center text-left <%= index === 1 ? 'pt-12 lg:h-[470px] -mt-16' : 'h-auto lg:h-[400px]' %>"
      >
        <!-- Icon Background and Position -->
        <div class="absolute -top-12">
          <div
            class="flex justify-center items-center <%= service.iconColor %> p-6 rounded-full"
          >
            <img
              src="/path/to/faicon.png"
              alt="<%= service.title %> Icon"
              class="h-12 w-12"
            />
          </div>
        </div>

        <!-- Space for Icon -->
        <div class="mt-12"></div>

        <h3 class="text-3xl font-semibold text-gray-900 mb-4 text-center">
          <%= service.title %>
        </h3>

        <ul class="space-y-4 text-left">
          <% service.items.forEach((item) => { %>
          <li class="text-gray-600 flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="mr-4 text-[#103153] font-extrabold bg-[#DAEFFE] p-1 rounded-sm"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M5 13l4 4L19 7"></path>
            </svg>
            <%= item %>
          </li>
          <% }); %>
        </ul>
        <a href="#" class="text-blue-600 font-semibold mt-auto">
          FIND OUT MORE &gt;
        </a>
      </div>
      <% }); %>
    </div>
  </div>

  <div class="mt-12 text-center">
    <button
      class="bg-[#103153] text-white text-lg font-semibold py-2 px-8 rounded-lg hover:bg-[#0e2d49] transition duration-300"
    >
      See All Services
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="ml-2"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M5 12l7-7 7 7"></path>
      </svg>
    </button>
  </div>
</div>
